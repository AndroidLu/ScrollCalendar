<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollCalendar">
        <!--styles-->
        <attr name="currentDayStyle" format="reference" />
        <attr name="legendSeparatorStyle" format="reference" />
        <attr name="monthTitleStyle" format="reference" />
        <attr name="legendItemStyle" format="reference" />
        <attr name="selectedItemStyle" format="reference" />
        <!--adapter-->
        <attr name="adapter" format="enum">
            <enum name="none" value="0" />
            <enum name="date" value="1" />
            <enum name="range" value="2" />
        </attr>

        <!--Text Color-->
        <attr name="fontColor" format="color" />
        <attr name="disabledTextColor" format="color" />
        <attr name="unavailableTextColor" format="color" />
        <attr name="currentDayTextColor" format="color" />
        <attr name="disabledBackgroundColor" format="color" />

        <attr name="backgroundColor" format="color" />
        <!--Drawable-->
        <attr name="selectedBeginningItemStyle" format="reference" />
        <attr name="selectedBackgroundMiddle" format="reference" />
        <attr name="selectedBackgroundEnd" format="reference" />
        <!--unavailable-->
        <attr name="unavailableBackground" format="reference" />
        <!--font-->
        <attr name="customFont" format="string" />

        <!--settings-->
        <attr name="endlessTop" format="boolean" />
        <attr name="showYearAlways" format="boolean" />

    </declare-styleable>

    <attr name="scrollCalendarStyleAttr" format="reference" />
</resources>
