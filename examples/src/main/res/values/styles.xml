<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.NoTheme">
        <item name="scrollCalendarStyleAttr">@style/MyScrollCalendarStyle</item>
    </style>

    <!--ORANGE-->

    <style name="MyScrollCalendarStyle" parent="@style/ScrollCalendarStyle">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="currentDayStyle">@style/CurrentDayStyle</item>
        <item name="disabledBackgroundColor">@android:color/transparent</item>
        <item name="disabledTextColor">@android:color/darker_gray</item>
        <item name="fontColor">@android:color/black</item>
        <item name="selectedItemStyle">@style/MySelectedItemStyle</item>
        <item name="selectedBeginningItemStyle">@style/MySelectedItemBeginningStyle</item>
        <item name="selectedEndItemStyle">@style/MySelectedItemEndStyle</item>
        <item name="selectedMiddleItemStyle">@style/MySelectedItemMiddleStyle</item>
        <item name="unavailableBackground">@drawable/strikethrough</item>
        <item name="unavailableTextColor">@android:color/darker_gray</item>
        <item name="adapter">none</item>
        <item name="legendItemStyle">@style/LegendItemStyle</item>
    </style>

    <style name="MySelectedItemStyle">
        <item name="android:height">1dp</item>
        <item name="android:background">@drawable/circle_full</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MySelectedItemMiddleStyle">
        <item name="android:background">@drawable/range_middle</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MySelectedItemEndStyle">
        <item name="android:background">@drawable/range_end</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MySelectedItemBeginningStyle">
        <item name="android:background">@drawable/range_start</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--RED-->

    <style name="AppThemeRed" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="actionMenuTextColor">@color/red</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="actionBarTheme">@style/RedToolbarStyle</item>
        <item name="legendItemStyle">@style/RedLegendItemStyle</item>
    </style>

    <style name="RedToolbarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:textColorPrimary">@color/red</item>
    </style>

    <style name="RedLegendItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RedHeaderBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="RedLayoutCurrentDayStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RedLegendSeparatorStyle">
        <item name="android:background">@drawable/divider</item>
        <item name="android:height">5dp</item>
    </style>

    <style name="RedLayoutSelectedItemStyle">
        <item name="android:background">@drawable/circle_full_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedLayoutSelectedBeginningItemStyle">
        <item name="android:background">@drawable/range_start_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedLayoutSelectedMiddleItemStyle">
        <item name="android:background">@drawable/range_middle_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedLayoutSelectedEndItemStyle">
        <item name="android:background">@drawable/range_end_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
